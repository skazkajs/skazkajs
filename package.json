{
  "name": "skazkajs",
  "version": "0.0.1",
  "description": "A Node.js - React platform for building web application",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "packages/server/*",
    "packages/react/*",
    "packages/redux/*",
    "packages/core/*",
    "website/*"
  ],
  "engines": {
    "node": ">=8.9.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "sync": "ds",
    "test": "npm-run-all test:**",
    "build": "lerna run build",
    "test:timeout": "sleep 5",
    "test:lint": "eslint . --ext .js,.jsx",
    "test:server": "cross-env NODE_ENV=test PORT=9000 mocha packages/server/**/*.test.js",
    "test:workspace": "cross-env NODE_ENV=test PORT=11000 mocha workspace/**/*.test.js",
    "test:coverage": "cross-env NODE_ENV=test PORT=12000 nyc mocha --recursive '@(workspace|packages)/**/*.test.@(js|jsx)'",
    "test:build": "yarn build",
    "pretest": "npm-run-all -c -p --silent db:stop:* && npm-run-all -p --silent db:start:* || npm-run-all -p --silent db:start:*",
    "posttest": "npm-run-all -c -p --silent db:stop:*",
    "db:start:mysql": "docker run -d --name mysql -p 3306:3306 -e MYSQL_ROOT_PASSWORD=root -e MYSQL_DATABASE=skazka mysql:5.6",
    "db:start:pg": "docker run -d --name pg -p 5432:5432 -e POSTGRES_USER=root -e POSTGRES_PASSWORD=root -e POSTGRES_DB=skazka postgres:alpine",
    "db:start:redis": "docker run -d --name redis -p 6379:6379 redis:alpine",
    "db:start:mongo": "docker run -d --name mongo -p 27017:27017 mongo",
    "db:stop:mysql": "docker rm -f mysql",
    "db:stop:pg": "docker rm -f pg",
    "db:stop:redis": "docker rm -f redis",
    "db:stop:mongo": "docker rm -f mongo",
    "precommit": "npm t",
    "prepush": "npm t",
    "publish": "lerna publish",
    "prepublish": "yarn build"
  },
  "keywords": [],
  "author": "SkazkaJS",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@https://github.com/skazkajs/skazka.git"
  },
  "authors": [
    "SkazkaJS <skazkajs@gmail.com> (https://github.com/skazkajs)",
    "Evheniy Bystrov <evheniy.bystrov@gmail.com> (https://github.com/evheniy)"
  ],
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "@babel/register": "^7.9.0",
    "aws-serverless-express": "^3.3.8",
    "axios": "^0.19.2",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-react-hot-loader": "^3.1.3",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "config": "^3.3.1",
    "cookie": "^0.4.0",
    "core-js": "3",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "debug": "^4.1.1",
    "dirty-chai": "^2.0.1",
    "docusaurus": "^1.14.4",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "express-graphql": "^0.9.0",
    "glob": "^7.1.6",
    "graphql": "^14.6.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-clean-dest": "^0.2.0",
    "helmet": "^3.22.0",
    "history": "^4.10.1",
    "husky": "^4.2.3",
    "ignore-styles": "^5.0.1",
    "ioredis": "^4.16.0",
    "jsdom": "^16.2.1",
    "method-override": "^3.0.0",
    "methods": "^1.1.2",
    "mime-types": "^2.1.26",
    "mocha": "^7.1.1",
    "mongoose": "^5.9.6",
    "mysql2": "^2.1.0",
    "mz": "^2.7.0",
