{
  "name": "skazkajs",
  "version": "0.0.0",
  "description": "A Node.js - React platform for building web application",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "packages/server/*",
    "packages/react/*",
    "packages/redux/*",
    "packages/core/*",
    "website/*"
  ],
  "engines": {
    "node": ">=8.9.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "test": "npm-run-all test:**",
    "build": "lerna run build",
    "test:lint": "eslint . --ext .js,.jsx",
    "test:coverage": "cross-env PORT=5000 jest --coverage --runInBand",
    "test:build": "yarn build",
    "test:examples:spa": "cd examples/spa && yarn && yarn test",
    "test:examples:rest": "cd examples/spa && yarn && yarn test",
    "test:examples:graphql": "cd examples/graphql && yarn && yarn test",
    "test:examples:serverless": "cd examples/serverless && yarn && yarn test",
    "pretest": "npm-run-all -c -p --silent db:stop:* && npm-run-all -p --silent db:start:* || npm-run-all -p --silent db:start:*",
    "posttest": "npm-run-all -c -p --silent db:stop:*",
    "db:start:mysql": "docker run -d --name mysql -p 3306:3306 -e MYSQL_ROOT_PASSWORD=root -e MYSQL_DATABASE=skazka mysql:5",
    "db:start:pg": "docker run -d --name pg -p 5432:5432 -e POSTGRES_USER=root -e POSTGRES_PASSWORD=root -e POSTGRES_DB=skazka postgres:alpine",
    "db:start:redis": "docker run -d --name redis -p 6379:6379 redis:alpine",
    "db:start:mongo": "docker run -d --name mongo -p 27017:27017 mongo",
    "db:stop:mysql": "docker rm -f mysql",
    "db:stop:pg": "docker rm -f pg",
    "db:stop:redis": "docker rm -f redis",
    "db:stop:mongo": "docker rm -f mongo",
    "precommit": "npm t",
    "prepush": "npm t"
  },
  "keywords": [],
  "author": "SkazkaJS",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@https://github.com/skazkajs/skazka.git"
  },
  "authors": [
    "SkazkaJS <skazkajs@gmail.com> (https://github.com/skazkajs)",
    "Evheniy Bystrov <evheniy.bystrov@gmail.com> (https://github.com/evheniy)"
  ],
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.4",
    "aws-serverless-express": "^3.3.6",
    "axios": "^0.18.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-react-hot-loader": "^3.1.3",
    "body-parser": "^1.19.0",
    "config": "^3.1.0",
    "cookie": "^0.3.1",
    "core-js": "2",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "debug": "^4.1.1",
    "docusaurus": "^1.8.3",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "express-graphql": "^0.8.0",
    "graphql": "^14.2.1",
    "gulp": "^4.0.1",
    "gulp-babel": "^8.0.0",
    "gulp-clean-dest": "^0.2.0",
    "helmet": "^3.16.0",
    "history": "^4.9.0",
    "husky": "^2.1.0",
    "ioredis": "^4.9.0",
    "jest": "^23.6.0",
    "method-override": "^3.0.0",
    "methods": "^1.1.2",
    "mime-types": "^2.1.24",
    "mongoose": "^5.5.4",
    "mz": "^2.7.0",
    "npm-run-all": "^4.1.5",
    "path-to-regexp": "^3.0.0",
    "pem": "^1.14.2",
    "pg": "^7.10.0",
    "promise-mysql": "^3.3.1",
    "promise-pause-timeout": "^1.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-error-boundary": "^1.2.5",
    "react-redux": "^7.0.2",
    "react-router": "^5.0.0",
    "redux": "^4.0.1",
    "resolve-path": "^1.4.0",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1"
  }
}
